<h1>Listing assets</h1>

<table> 
<table border="2" style="border-width: 1px; border-color:#000080;
border-style: solid;">
  <tr>
    <th>IT Asset</th>
    <th>Cost</th>
    <th>Reference</th>
    <th>Room</th>
    <th>Date installed</th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%=h asset.i_t_asset %></td>
    <td><%=h asset.cost %></td>
    <td><%=h asset.reference %></td>
    <td><%=h asset.room %></td>
    <td><%=h asset.date_installed %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

